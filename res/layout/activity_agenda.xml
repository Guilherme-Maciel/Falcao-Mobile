<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >
 
    <!-- Header aligned to top -->
 
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center" >

    </RelativeLayout>
 
    <!-- Footer aligned to bottom -->
 
    <!-- Content below header and above footer -->
 
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:background="#0072FF"
        android:gravity="top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0072FF"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/webView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                android:background="#0066ff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menu"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:contentDescription="TODO"
                android:onClick="menuAction"
                android:src="@drawable/menu_on" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-3dp"
                android:src="@drawable/menu_bio"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/disco"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_disco"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/video"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-7dp"
                android:src="@drawable/menu_video"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/hq"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_hq"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/agenda"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_agenda"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/contato"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_contato"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>
 
</RelativeLayout>
