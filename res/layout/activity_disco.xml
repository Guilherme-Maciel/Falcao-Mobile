<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >
 
    <!-- Header aligned to top -->
 
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center" >

    </RelativeLayout>
 
    <!-- Footer aligned to bottom -->
 
    <!-- Content below header and above footer -->
 
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:background="@drawable/vinil_disco"
        android:gravity="bottom" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="bottom" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/discografia_text" />

                    <ImageView
                        android:id="@+id/seta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:src="@drawable/album0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-25dp"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/a1"
                        android:layout_width="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a1"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/a2"
                        android:layout_width="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a2"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/a3"
                        android:layout_width="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a3"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/a4"
                        android:layout_width="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a4"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/a5"
                        android:layout_width="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a5"
                        android:gravity="center" />
                  

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                     android:gravity="center" >

                    <ImageButton
                        android:id="@+id/a6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/a6" />

                    <ImageButton
                        android:id="@+id/a7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a7"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/a8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a8"
                        android:gravity="center" />

                    <ImageButton
                        android:id="@+id/a9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:src="@drawable/a9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ouca_txt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/spotify"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spotify_button" />

                    <ImageButton
                        android:id="@+id/deezer"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/deezer_button" />
                    
                      <ImageButton
                          android:id="@+id/google"
                          style="?android:attr/borderlessButtonStyle"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:src="@drawable/google_button" />

                        <ImageButton
                            android:id="@+id/youtubeMusic"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/youtube_button" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_gravity="top"
                    android:background="@drawable/footer"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/face"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-3dp"
                        android:src="@drawable/face" />

                    <ImageButton
                        android:id="@+id/twitter"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:src="@drawable/twitter" />

                    <ImageButton
                        android:id="@+id/instagram"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:src="@drawable/insta" />

                    <ImageButton
                        android:id="@+id/youtube"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:src="@drawable/youtube" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menu"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:contentDescription="TODO"
                android:onClick="menuAction"
                android:src="@drawable/menu_on" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-3dp"
                android:src="@drawable/menu_bio"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/disco"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_disco"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/video"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-7dp"
                android:src="@drawable/menu_video"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/hq"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_hq"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/agenda"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_agenda"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/contato"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/menu_contato"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>
 
</RelativeLayout>